pipeline {
    agent {
        label "slave"
    }

    stages {
        stage("Clone code from GitHub") {
            steps {
                git branch: 'main', url: 'https://github.com/timurbabs/spring-petclinic.git'
            }
        }
        stage("Maven Build") {
            steps {
                script {
                    sh "./mvnw clean validate"
                    sh "./mvnw clean compile"
                    sh "./mvnw clean test"
                }
            }
        }
    }
}
